<Window x:Class="Pract22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract22"
        mc:Ignorable="d"
            
        Title="Практическая 22" 
   
        Height="400" 
        Width="700"
                
        Icon="/icons8_cat_in_a_box_480px_9.png"

        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">

            <MenuItem Header="Файл">
                <MenuItem Header="Открыть"
                          x:Name="altOpen"
                          Click="altOpen_Click"/>
                
                <MenuItem Header="Сохранить"
                          x:Name="altSave"
                          Click="altSave_Click"/>

                <MenuItem x:Name="mItExit"
                      Click="mItExit_Click"
                      Header="Выход"/>
            </MenuItem>

            <MenuItem Header="Справка">

                <MenuItem x:Name="mItInfo"
                      Click="mItInfo_Click"
                      Header="О программе"/>

                <Separator/>

                <MenuItem x:Name="mItDeveloper"
                      Click="mItDeveloper_Click"
                      Header="Разработчик"/>

            </MenuItem>
        </Menu>

        <TabControl x:Name="tabControl" 
                    Grid.Row="1">
            <TabItem Header="Одномерный массив"
                     Background="Gold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2.5*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="dgOneArray"
                          Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"/>

                    <GroupBox Header="Таблица"
                          Grid.Row="1"
                          Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtBoxCount"
                                  Grid.Row="0"/>
                            <Label Content="- Количество столбцов"
                                Grid.Row="0"
                                Grid.Column="1"/>

                            <TextBox x:Name="txtBoxRange"
                                  Grid.Row="1"/>
                            <Label Content="- диапазон"
                                Grid.Row="1"
                                Grid.Column="2"/>

                            <Button x:Name="btnFill"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Grid.Row="3"
                                 Content="Заполнить"
                                 Click="btnFill_Click"
                                 ToolTip="Нажми на эту кнопку, без неё ничего не работает"/>

                            <Button x:Name="btnCreate"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Grid.Row="2"
                                 Content="Создать"
                                 Click="btnCreate_Click"
                                 ToolTip="С помощью этой кнопки создаётся ПУСТОЙ массив"/>
                        </Grid>

                    </GroupBox>

                    <GroupBox Header="Решение"
                          Grid.Row="1"
                          Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtBoxResult"
                                 Grid.Row="0"
                                 IsReadOnly="True"/>

                            <Label Content="- решение"
                               Grid.Row="0"
                               Grid.Column="1"/>

                            <Button x:Name="btnResult"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="2"
                                Content="Решение"
                                Click="btnResult_Click"
                                ToolTip="Нажми на неё для того, чтобы получить ответ"/>

                            <Button x:Name="btnClear"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="3"
                                Content="Очистить"
                                Click="btnClear_Click"
                                ToolTip="Сотри, убей, УНИЧТОЖЬ"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Двумерный массив"
                     Background="BlueViolet">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="dgTwoArray"
                          Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"/>

                    <GroupBox Header="Таблица"
                          Grid.Row="1"
                          Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtBoxColumn2"
                                 Grid.Row="0"/>
                            <Label Content="- Количество строк"
                               Grid.Row="0"
                               Grid.Column="1"/>

                            <TextBox x:Name="txtBoxRow2"
                                 Grid.Row="1"/>
                            <Label Content="- Количество столбцов"
                               Grid.Row="1"
                               Grid.Column="1"/>

                            <TextBox x:Name="txtBoxRange2"
                                 Grid.Row="2"/>
                            <Label Content="- диапазон"
                               Grid.Row="2"
                               Grid.Column="2"/>

                            <Button x:Name="btnFill2"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Grid.Row="4"
                                 Content="Заполнить"
                                 Click="btnFill2_Click"
                                 ToolTip="Нажми на эту кнопку, без неё ничего не работает"/>

                            <Button x:Name="btnCreate2"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Grid.Row="3"
                                 Content="Создать"
                                 Click="btnCreate2_Click"
                                    ToolTip="С помощью этой кнопки создаётся ПУСТАЯ матрица"/>
                        </Grid>

                    </GroupBox>

                    <GroupBox Header="Решение"
                          Grid.Row="1"
                          Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtBoxResult2"
                                 Grid.Row="0"
                                 IsReadOnly="True"/>

                            <Label Content="- решение"
                               Grid.Row="0"
                               Grid.Column="1"/>

                            <Button x:Name="btnResult2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="2"
                                Content="Решение"
                                Click="btnResult2_Click"
                                ToolTip="Нажми на неё для того, чтобы получить ответ"/>

                            <Button x:Name="btnClear2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="3"
                                Content="Очистить"
                                Click="btnClear2_Click"
                                ToolTip="Сотри, убей, УНИЧТОЖЬ"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>