<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        
        Title="Практическая 17" 
        
        Icon="logo.png"
        
        Height="350" 
        Width="500"
        
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Column="0"
              Grid.Row="0"
              Grid.ColumnSpan="2">
            
            <!-- ColumnSpan объединяет столбцы-->            
            <MenuItem Header="Файл">
                <MenuItem x:Name="mItExit"
                          Click="mItExit_Click"
                          Header="Выход"/>
            </MenuItem>

            <MenuItem Header="Справка">
                <MenuItem x:Name="mItInfo"
                          Click="mItInfo_Click"
                          Header="О программе"/>

                <Separator/>

                <MenuItem x:Name="mItDeveloper"
                          Click="mItDeveloper_Click"
                          Header="Разработчик"/>
            </MenuItem>
        </Menu>

        <!-- Задача 1 -->
        <GroupBox Header="Задача 1"
                  Margin="10"
                  
                  Grid.Column="0"
                  Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <!-- Исходные данные для задачи 1 -->
                <GroupBox Grid.Column="0"
                          Grid.Row="0">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="cat.png"
                                   Width="15"/>
                            <Label Content="Исходные данные"/>
                        </StackPanel>
                    </GroupBox.Header>

                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12*"/>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="183*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="1.6*"/>
                        </Grid.RowDefinitions>

                        <Label Content="A:"
                               
                               Grid.Column="0"
                               Grid.Row="0" Grid.ColumnSpan="2"/>

                        <TextBox x:Name="txtBoxA"
                                 TextChanged="txtBoxA_TextChanged"
                                 
                                 Grid.Column="2"
                                 Grid.Row="0" Margin="5,5,5,5"/>
                    </Grid>
                </GroupBox>

                <Button x:Name="btnResult1"
                        Click="btnResult1_Click"
                        
                        Margin="0, 5"
                        
                        Grid.Column="0"
                        Grid.Row="1">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="logo.png"
                                   Width="20"/>

                            <Label Content="Получить результат" Height="26"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <!-- Результат для задачи 1 -->
                <GroupBox Header="Результат"
                          Grid.Column="0"
                          Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="1.1*"/>
                        </Grid.RowDefinitions>

                        <Label Content="V:"
       
                               Grid.Column="0"
                               Grid.Row="0"/>

                        <TextBox x:Name="txtBoxV"
                                 
                                 IsReadOnly="True"
         
                                 Grid.Column="1"
                                 Grid.Row="0"/>

                        <Label Content="S:"
       
                               Grid.Column="0"
                               Grid.Row="1"/>

                        <TextBox x:Name="txtBoxS"
                                 
                                 IsReadOnly="True"
         
                                 Grid.Column="1"
                                 Grid.Row="1"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!-- Задача 2 -->
        <GroupBox Header="Задача 2"
                  Margin="10"
                  
                  Grid.Column="1"
                  Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Исходные данные">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="M:"
                               Grid.Column="0"
                               Grid.Row="0"/>

                        <TextBox x:Name="txtBoxM"
                               TextChanged="txtBoxM_TextChanged"
                               Grid.Column="1"
                               Grid.Row="0" Margin="5,5,5,20"/>
                    </Grid>
                </GroupBox>

                <Button x:Name="btnResult2"
                        Click="btnResult2_Click"
                        
                        Margin="5"
                       
                        Content="Получить результат"
                        Cursor="Hand"
                        Grid.Row="1">
                </Button>
               
                <!-- Результат для задачи 2 -->
                <GroupBox Header="Результат"
                          Grid.Column="0"
                          Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="1.1*"/>
                        </Grid.RowDefinitions>
                        <Label Content="T:"
                               
                               Grid.Column="0"
                               Grid.Row="0"/>
                        
                        <TextBox x:Name="txtBoxT"
                                 
                                IsReadOnly="True"
         
                                Grid.Column="1"
                                Grid.Row="0"/>
                        
                        <Label Content="Kg:"
                               
                                Grid.Column="0"
                                Grid.Row="1"/>

                        <TextBox x:Name="txtBoxKg"
                                
                                IsReadOnly="True"
         
                                Grid.Column="1"
                                Grid.Row="1"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>

